{
  "name": "gopherhq",
  "version": "0.0.8-beta",
  "description": "Gopher Email API client for the browser and node.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gopherhq/gopherhq-js.git"
  },
  "main": "lib/gopherhq.js",
  "directories": {
    "test": "test"
  },
  "files": ["lib", "readme"],
  "scripts": {
    "test": "mocha --require babel-register --require babel-polyfill",
    "test:watch": "npm t -- -w",
    "test:watch:live": "NOCK_OFF=true npm t -- -w",
    "test:inspect": "npm t -- --inspect-brk",
    "test:rebuild": "THROTTLE=true REBUILD_MOCKS=true npm t",
    "build": "rimraf lib && babel --out-dir lib src",
    "prepublishOnly": "npm run build",
    "prepush": "npm test"
  },
  "author": "Reilly Sweetland @rsweetland",
  "license": "MIT",
  "dependencies": {
    "axios": "0.17.1",
    "crypto": "0.0.3",
    "debug": "^2.6.8",
    "querystring": "^0.2.0",
    "simple-oauth2": "^1.2.0",
    "unix-timestamp": "^0.2.0",
    "url-join": "^2.0.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.1",
    "chai": "^4.0.2",
    "dotenv": "4.0.0",
    "husky": "0.14.3",
    "mocha": "^3.4.2",
    "nock": "^9.0.13",
    "node-libs-browser": "2.1.0",
    "rimraf": "2.6.2"
  }
}
