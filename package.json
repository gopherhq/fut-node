{
  "name": "@mailbots/mailbots-js",
  "version": "0.0.23-beta",
  "description": "MailBots API client for the node.js and the browser",
  "repository": {
    "type": "git",
    "url": "https://github.com/gopherhq/gopherhq-js.git"
  },
  "main": "lib-node/gopherhq.js",
  "browser": "lib-browser/gopherhq.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "lib-browser",
    "lib-node",
    "dist",
    "readme"
  ],
  "scripts": {
    "test": "NOCK_OFF=true SERVER=true mocha --require babel-register --require babel-polyfill",
    "test:fast": "echo '\n\n⚠️ Not all tests run in fast-mode\n\n'; sleep .1; NOCK_OFF=false SERVER=true mocha --require babel-register --require babel-polyfill",
    "test:watch": "npm run test:fast -- -w",
    "test:inspect": "npm t -- --inspect-brk -w",
    "test:rebuild": "THROTTLE=true REBUILD_MOCKS=true npm t -- --inspect-brk",
    "build": "npm run build:node && npm run build:browser && npm run build:dist",
    "build:watch": "concurrently \"npm run build:node -- --watch\" \"npm run build:browser -- --watch\"",
    "build:node": "rimraf lib-node && SERVER=true babel --out-dir lib-node src",
    "build:browser": "rimraf lib-browser && SERVER=false babel --out-dir lib-browser src",
    "build:dist": "rimraf dist && SERVER=false webpack",
    "build:docs": "documentation -c documentation.yml -f html build src/* -o docs && cd docs && now --static && echo '\n Run: \n\n now alias [pjt-url] gopherhq-js.gopheremail.com\n'",
    "dev:docs": "documentation -c documentation.yml serve --watch src/* ",
    "prepublishOnly": "npm run build"
  },
  "now": {
    "alias": "gopherhq-js.gopheremail.com"
  },
  "author": "Reilly Sweetland @rsweetland",
  "license": "MIT",
  "dependencies": {
    "axios": "0.17.1",
    "concurrently": "3.5.1",
    "crypto": "0.0.3",
    "debug": "^2.6.8",
    "qs": "6.5.1",
    "query-string": "5.0.1",
    "querystring": "^0.2.0",
    "simple-oauth2": "1.6.0",
    "unix-timestamp": "^0.2.0",
    "url-join": "^2.0.2"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.2",
    "babel-plugin-minify-dead-code-elimination": "0.2.0",
    "babel-plugin-transform-define": "1.3.0",
    "babel-preset-env": "1.6.1",
    "chai": "^4.0.2",
    "dotenv": "4.0.0",
    "husky": "0.14.3",
    "mocha": "5.2.0",
    "nock": "10.0.4",
    "node-libs-browser": "2.1.0",
    "rimraf": "2.6.2",
    "webpack": "3.10.0"
  }
}
